{
  "name": "@hackademymx/challenge-generator",
  "version": "0.0.1",
  "description": "Fetches a code challenge from the backend, and creates the necessary files to run locally.",
  "main": "./lib/index.js",
  "bin": "challenge-generator",
  "scripts": {
        "start": "npm run build && npm run global",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "nyc mocha",
    "lint": "tslint -p . --fix",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && cgx",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roeeyn/challenge-generator.git"
  },
  "keywords": [
    "challenge",
    "coding",
    "hackademymx",
    "hackademy"
  ],
  "author": "Rodrigo Medina",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roeeyn/challenge-generator/issues"
  },
  "homepage": "https://github.com/roeeyn/challenge-generator#readme",
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "figlet": "^1.5.2",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.4",
    "inversify": "^6.0.1",
    "kleur": "^4.1.4",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.35",
    "ts-node": "^10.8.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  }
}
